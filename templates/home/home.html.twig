{% extends 'base.html.twig' %}

{% block title %} Badmintrain | Accueil {% endblock %}

{% block body %}
<section class="h-100 gradient-form">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6 form-tournament bg-white d-flex align-items-center border">
              <div class="card-body p-md-5 mx-md-4">
                <div class="text-center">
                  <img src={{asset('media/volant.jpg')}} class="mb-3" style="width: 105px;transform: rotate(90deg);" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1"></h4>
                </div>

                <form action="{{ path('tournament.create') }}" method="post">
                  <h5 class="mb-5 text-center">Cr√©er votre Tournoi !</h5>
                {{ form_start(tournamentForm) }}

                  <div data-mdb-input-init class="form-outline mb-4">
                    {{ form_label(tournamentForm.nbterrains, null, {
                        'label': 'Nombre de terrain',
                        'label_attr': {'class': 'form-label'}
                    }) }}
                    {{ form_widget(tournamentForm.nbterrains, {
                        'attr': {'class': 'form-select shadow-none border-top-0 rounded-0 input-create-tournament'}
                    }) }}
                  </div>

                  <div data-mdb-input-init class="form-outline mb-4">
                    {{ form_label(tournamentForm.nbjoueurs, null, {
                        'label': 'Nombre de joueurs',
                        'label_attr': {'class': 'form-label'}
                    }) }}
                    {{ form_widget(tournamentForm.nbjoueurs, {
                        'attr': {'class': 'form-control shadow-none border-top-0 rounded-0 input-create-tournament'}
                    }) }}
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Valider</button>
                  </div>
                {{ form_end(tournamentForm)}}
                </form>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center information">
                <div class="text-black px-3 py-4 p-md-5 mx-md-4">
                    <h4 class="mb-4 invisible">We are more than just a company</h4>
                    <p class="small invisible">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                    exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}