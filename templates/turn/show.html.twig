{% extends 'base.html.twig' %}

{% block title %}Tour x{% endblock %}

{% block body %}
    <div class="row">
        <div class="container-fluid text-center py-5">
        {% for match in matches %}
            <div class="card mx-3 mb-5 terrain_1 terrain" style="width: 18rem; display: inline-block; height: 20rem;">
                <div class="controls">
                    <!--<div class="control control-prev"><i class="fa fa-chevron-left" aria-hidden="true"></i></div>
                    <div class="control control-next"><i class="fa fa-chevron-right" aria-hidden="true"></i></div>-->
                </div>
                <div class="card-header text-uppercase">
                    <b>terrain {{ match.terrain }}</b>
                </div>
                <div class="terrain-content">
                    <div>
                        <div class="left corridor"></div>
                        <div class="ligne-fond top d-block"></div>
                        <div class="player left d-inline-block">
                            <span class="player_nb">{{ match.teams[0].player1 }}</span>
                        </div>
                        <div class="player right d-inline-block">
                            <span class="player_nb">{{ match.teams[0].player2 }}</span>
                        </div>
                        <div class="d-block terrain-separator"></div>
                        <div class="player left d-inline-block">
                            <span class="player_nb">{{ match.teams[1].player1 }}</span>
                        </div>
                        <div class="player right d-inline-block">
                            <span class="player_nb">{{ match.teams[1].player2 }}</span>
                        </div>
                        <div class="d-block terrain-separator"></div>
                        <div class="ligne-fond bottom d-block"></div>
                        <div class="right corridor"></div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
        {% if endoftournament %}
            <a href="{{ path('matches.show', {'id' : tournamentid,'turn' : turn + 1 }) }}" class="btn btn-primary btn-next-turn"> Fin du tournoi </a>
        {% else %}
            {% if turn %}
                <a href="{{ path('matches.show', {'id' : tournamentid,'turn' : turn - 1 }) }}" class="btn btn-primary btn-prev-turn"> Tour précédent </a>
            {% endif %}
            <a href="{{ path('matches.show', {'id' : tournamentid,'turn' : turn + 1 }) }}" class="btn btn-primary btn-next-turn"> Tour suivant </a>
        {% endif %}
    </div>
{% endblock %}
